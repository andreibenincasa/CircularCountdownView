<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ccv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="A basic, scalable and customizable circular countdown view for Android."
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_marginTop="16dp">

        <com.abs.ccv.CircularCountdownView
            android:id="@+id/ccv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            ccv:backgroundColor="@color/colorPrimaryDark"
            ccv:duration="10000"
            ccv:initialElapsedTime="1000"
            ccv:progressColor="@color/colorAccent"
            ccv:progressWidth="12dp"
            ccv:strokeColor="@color/colorPrimary"
            ccv:strokeWidth="12dp"
            ccv:timeCounterMask="ss" />
    </RelativeLayout>
</LinearLayout>
