<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ccv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="A basic, scalable and customizable circular countdown view for Android."
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.abs.ccv.CircularCountdownView
        android:id="@+id/ccv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        ccv:backgroundColor="@color/colorPrimaryDark"
        ccv:duration="5000"
        ccv:initialElapsedTime="2000"
        ccv:progressColor="@color/colorAccent"
        ccv:progressWidth="12dp"
        ccv:strokeColor="@color/colorPrimary"
        ccv:strokeWidth="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="A 10s setup with 5s of elapsed time. Since the onCountdownFinished remove the elapsed time, this one will begin from the middle just in the first turn."
        android:textSize="18sp" />
</LinearLayout>
