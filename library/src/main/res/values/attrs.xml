<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularCountdownView">
        <attr name="progressWidth" format="dimension" />
        <attr name="progressColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="progressEdge" format="enum">
            <enum name="round" value="0" />
            <enum name="square" value="1" />
        </attr>
        <attr name="duration" format="integer" />
        <attr name="initialElapsedTime" format="integer" />

        <!-- TODO: Add others masks here -->
        <attr name="timeCounterMask" format="enum">
            <enum name="ss" value="0" />
            <enum name="mm_ss" value="1" />
            <enum name="mm_ss_SS" value="2" />
            <enum name="HH_mm_ss" value="3" />
        </attr>
    </declare-styleable>
</resources>